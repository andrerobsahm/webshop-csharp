@model List<Webshop.Models.CheckoutViewModel>

@{
    ViewData["Title"] = "Checkout";
}

<h2>Yeah! Soon you're done with your purchase!</h2>

<h4>To complete your order, please enter your credentials below</h4>
<br>

<form action="checkout/addToOrder" method="post">
    <input type="hidden" name="sum" value="@Model[0].Sum">
    
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" placeholder="Robban Broberg">
        </div>
        <div class="form-group col-md-6">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" placeholder="Email">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="address">Address</label>
            <input type="text" class="form-control" name="address" placeholder="1234 Main St">
        </div>

        <div class="form-group col-md-4">
            <label for="city">City</label>
            <input type="text" class="form-control" name="city" placeholder="New York">
        </div>
                <div class="form-group col-md-2">
            <label for="zip">Zip</label>
            <input type="text" class="form-control" name="zip" placeholder="123 45">
        </div>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
                I agree to the terms and conditions
            </label>
        </div>
    </div>

    @foreach(var checkout in Model)
    {
        <h3>Total price: €@(checkout.Sum)</h3>
    }
    
    <button type="submit" class="btn btn-primary">Send order</button>
</form>
