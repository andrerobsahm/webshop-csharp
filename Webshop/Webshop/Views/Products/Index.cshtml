@model List<Webshop.Models.ProductsViewModel>


@{
    ViewData["Title"] = "All our Bass guitars";
}

<h1 style="text-align: center;">@ViewData["Title"]</h1>
<hr class="underline">


<div class="body-content">

    @foreach(var products in Model)
    {
        <section>
            <h2>@(products.Title)</h2> 
            <a href="/products/item/@(products.Id)"><img class="bass_image" src="@(products.Image)"></a>
            <p>Price: €@(products.Price)</p> 

            <article style="display:flex;">
                <a href="/products/item/@(products.Id)"><button type="button" class="btn btn-info" style="margin-right:5px;">Read More</button></a>
                <form action="/cart/addtocart/@(products.Id)" method="post">
                   <input class="btn btn-primary" type="submit" value="Buy now!" />
                </form>            
            </article>
        
        </section>
    <hr>
    }
</div>